<h1>Articles listing pages</h1>

<table>
 <thead>
   <tr>
     <th>Title</th>
     <th>Description</th>
     <th>Actions</th>
   </tr>
 </thead>


  <tbody>
   <% @article.each do |article| %>
    <tr>
     <td><%= article.title %></td>
     <td><%= article.description %></td>
     <td><%= link_to 'Show', article_path(article) %></td>
     <td><%= link_to 'Delete', article_path(article), data: { "turbo-method": :delete }%></td>


   </tr>
  <% end %>
 </tbody>
</table>
